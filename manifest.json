{
  "manifest_version": 3,
  "name": "NYT Crossword Clue Hider",
  "description": "Hide clues you have already filled on the New York Times Crossword.",
  "version": "1.0",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "https://www.nytimes.com/crosswords/*"
      ]
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}